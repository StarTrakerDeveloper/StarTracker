<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionba_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.star.layout.view.CircleForImageView
        android:id="@+id/search_result_item_touxiang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@drawable/kn" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_result_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhon.Ritina"
                android:textColor="#AFBBEA"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/search_result_item_sexImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/nv" />

            <ImageView
                android:id="@+id/search_result_item_xingzuoImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_baiyang_p" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_result_item_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When amazing night"
            android:textColor="#4873A8"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>