<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    <LinearLayout 
         android:layout_width="match_parent"
   		 android:layout_height="@dimen/menu_layout_height"
   		 android:layout_gravity="center"
    	 android:orientation="horizontal"
    	  >
		<ImageView 
		    android:id="@+id/registered_gobk" 
		    android:src="@drawable/icon_back_p"
		    android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:contentDescription="@string/contentDescription"
		    android:scaleType="centerInside"
		     />
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="@string/menu_registered"
			android:paddingLeft="50dp"
			android:gravity="center_vertical"
		    android:textColor="@color/text_color"
		    android:textSize="@dimen/menu_textSize" />
    </LinearLayout>

   <LinearLayout
       		android:layout_marginTop="@dimen/editText_layout_margin"
         android:layout_width="match_parent"
   		 android:layout_height="40dp"
    	 android:orientation="horizontal"
    	 android:layout_marginLeft="@dimen/editText_layout_margin"
    	 android:layout_marginRight="@dimen/editText_layout_margin"
    	 android:background="@drawable/inputbox_n"
    	  >

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/icon_lock" 
            android:layout_height="wrap_content"
            android:scaleType="fitStart"/>
        <EditText
            android:id="@+id/forget_oldpswd"
             android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:width="@dimen/editText_width"
            android:height="@dimen/editText_height"
            android:textColor="@color/text_color"
            android:hint="@string/editText_registered_phone"
            android:inputType="phone" />
    </LinearLayout>
    
   <LinearLayout
       		android:layout_marginTop="@dimen/editText_layout_margin"
         android:layout_width="match_parent"
   		 android:layout_height="40dp"
    	 android:orientation="horizontal"
    	 android:layout_marginLeft="@dimen/editText_layout_margin"
    	 android:layout_marginRight="@dimen/editText_layout_margin"
    	 android:background="@drawable/inputbox_n"
    	  >

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/icon_unlock" 
            android:layout_height="wrap_content"
            android:scaleType="fitStart"/>
        <EditText
            android:id="@+id/forget_newpswd"
             android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:width="@dimen/editText_width"
            android:height="@dimen/editText_height"
            android:textColor="@color/text_color"
            android:hint="@string/editText_registered_pswd"
            android:inputType="phone" />
    </LinearLayout>
    
   <LinearLayout
       		android:layout_marginTop="@dimen/editText_layout_margin"
         android:layout_width="match_parent"
   		 android:layout_height="40dp"
    	 android:orientation="horizontal"
    	 android:layout_marginLeft="@dimen/editText_layout_margin"
    	 android:layout_marginRight="@dimen/editText_layout_margin"
    	 android:background="@drawable/inputbox_n"
    	  >

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/icon_unlock" 
            android:layout_height="wrap_content"
            android:scaleType="fitStart"/>
        <EditText
            android:id="@+id/forget_rnewpswd"
             android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:width="@dimen/editText_width"
            android:height="@dimen/editText_height"
            android:textColor="@color/text_color"
            android:hint="@string/editText_registered_rpswd"
            android:inputType="phone" />
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
   		 android:layout_height="50dp"
   		 android:layout_marginTop="50dp"
    	 android:orientation="horizontal"
    	 android:layout_marginLeft="@dimen/editText_layout_margin"
    	 android:layout_marginRight="@dimen/editText_layout_margin"
    	
    	  >
		<Button android:text="@string/btn_registered"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		     android:background="@drawable/btn_n"
		     android:textColor="@color/btn_unpress_color"
		     />
    </LinearLayout>

</LinearLayout>
