                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:src="@drawable/jinniu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="金牛座"
                    android:textColor="#ACBEE1"
                    android:textSize="14dip" />
            </com.star.layout.view.CircleImageView>

            <com.star.layout.view.CircleImageView
                android:id="@+id/laybtn5"
                circle:name="摩羯座"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:src="@drawable/mojie" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="摩羯座"
                    android:textColor="#ACBEE1"
                    android:textSize="14dip" />
            </com.star.layout.view.CircleImageView>

            <com.star.layout.view.CircleImageView
                android:id="@+id/laybtn6"
                circle:name="巨蟹座"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:src="@drawable/juxie" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="巨蟹座"
