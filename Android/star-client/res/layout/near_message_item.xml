<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px" >

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/nearMsg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15px"
            android:paddingTop="10px"
            android:text="Jhon.Ritina"
            android:textColor="#30619d"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_woman" />

        <TextView
            android:id="@+id/nearMsg_anothername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15px"
            android:paddingTop="10px"
            android:text="lion"
            android:textColor="#30619d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/refresh_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="1min"
            android:textColor="#30619d" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="120px"
        android:layout_marginRight="30px"
        android:background="@drawable/my_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nearMsg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:text="A little star has been come!"
            android:textColor="#30619d" />

        <GridView
            android:id="@+id/image_group"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="40dp"
            android:gravity="center"
            android:verticalSpacing="10px"
            android:horizontalSpacing="10px"
            android:numColumns="auto_fit"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="20px"
            android:stretchMode="columnWidth"
             >
        </GridView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingTop="10px" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_lbs" />

            <TextView
                android:id="@+id/nearMsg_lbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0km"
                android:textColor="#2f5989" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>