<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/profile_actionbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionba_bg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/profile_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/profile_grzl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#96ACD5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/profile_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingRight="10dp"
            android:text="保存"
            android:textColor="#4576B1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_imageGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingLeft="50px"
        android:paddingRight="50px">

        <ImageView
            android:id="@+id/profile_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test" />

        <ImageView
            android:id="@+id/profile_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test" />

        <ImageView
            android:id="@+id/profile_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/test" />

        <ImageView
            android:id="@+id/profile_addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_addsome_p" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Click Change images ,a total of eight"
        android:textColor="#568dca" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingRight="30dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星语"
                android:textColor="#2F4D7C"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_language"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/btn_n"
                android:gravity="center"
                android:hint="请写下你的星语"
                android:textColorHint="#669dd7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年龄"
                android:textColor="#2F4D7C"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_age"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/btn_n"
                android:gravity="center"
                android:hint="请写下你的年龄"
                android:textColorHint="#669dd7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="城市"
                android:textColor="#2F4D7C"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/profile_city"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/btn_n"
                android:gravity="center"
                android:hint="请写下你的城市"
                android:textColorHint="#669dd7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="声音"
                android:textColor="#2F4D7C"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/profile_voince_lay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@drawable/btn_n"
                android:gravity="center" >

                <Button
                    android:id="@+id/profile_voince"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_sounds" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>